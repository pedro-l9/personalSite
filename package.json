{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install && yarn build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write .",
    "format:ci": "prettier --write",
    "pre-commit": "lint-staged",
    "commit-msg": "if [ $(git rev-parse --abbrev-ref HEAD) = master ]; then commitlint -e; fi"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "yarn format:ci"
    ]
  },
  "dependencies": {
    "@pedro-l9/functional-snake": "^0.13.2",
    "firebase": "^9.14.0",
    "i18next": "^22.0.5",
    "i18next-browser-languagedetector": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.18.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "firebase-tools": "^11.16.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
