{
  "name": "personal-site",
  "version": "1.6.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "yarn build && yarn deploy:ci",
    "deploy:ci": "firebase deploy --non-interactive --force --only hosting",
    "eject": "react-scripts eject",
    "format": "prettier"
  },
  "dependencies": {
    "@pedro-l9/functional-snake": "^0.13.2",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "firebase": "^8.3.3",
    "i18next": "^17.2.0",
    "i18next-browser-languagedetector": "^4.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-i18next": "^15.0.0",
    "react-scripts": "^5.0.1",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "firebase-tools": "^13.14.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts, tsx}": [
      "npm run format -- --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
